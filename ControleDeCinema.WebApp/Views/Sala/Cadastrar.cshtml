@model CadastrarSalaViewModel

@{
    ViewBag.Title = "Cadastrar Sala";
    Layout = "_Layout";
}

<div class="card bg-dark text-white shadow-sm border-0">
    <form asp-action="Cadastrar" method="post">
        <div class="card-header border-bottom">
        </div>

        <div class="card-body">
            <div class="mb-3">
                <label asp-for="Nome" class="form-label">Nome</label>
                <input asp-for="Nome" class="form-control bg-dark text-white border-secondary" />
                <span asp-validation-for="Nome" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Capacidade" class="form-label">Capacidade</label>
                <input asp-for="Capacidade" type="number" class="form-control bg-dark text-white border-secondary" />
                <span asp-validation-for="Capacidade" class="text-danger small"></span>
            </div>
        </div>

        <div class="card-footer d-flex justify-content-end border-top">
            <a asp-action="Listar" class="btn btn-outline-secondary me-2">
                <i class="bi bi-x-circle me-1"></i> Cancelar
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-save me-1"></i> Salvar
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
