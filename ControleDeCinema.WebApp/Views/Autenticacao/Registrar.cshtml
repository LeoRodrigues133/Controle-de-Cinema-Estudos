@model RegistrarViewModel

@{
    ViewBag.Title = "Registrar";
    Layout = "_Layout";
}

<div class="card bg-dark text-white shadow-sm border-0 mt-5 mx-auto" >
    <form asp-action="Registrar" method="post">

        <div class="card-body">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-mail</label>
                <input asp-for="Email" class="form-control bg-dark text-white border-secondary" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Usuario" class="form-label">Usuário</label>
                <input asp-for="Usuario" class="form-control bg-dark text-white border-secondary" />
                <span asp-validation-for="Usuario" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Senha" class="form-label">Senha</label>
                <input asp-for="Senha" type="password" class="form-control bg-dark text-white border-secondary" />
                <span asp-validation-for="Senha" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmaSenha" class="form-label">Confirmar Senha</label>
                <input asp-for="ConfirmaSenha" type="password" class="form-control bg-dark text-white border-secondary" />
                <span asp-validation-for="ConfirmaSenha" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Tipo" class="form-label">Tipo</label>
                <select asp-for="Tipo" class="form-select bg-dark text-white border-secondary" asp-items="Model.Tipos">
                    <option value="">Selecione</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger small"></span>
            </div>
        </div>

        <div class="card-footer d-flex justify-content-end border-top">
            <a asp-action="Login" class="btn btn-outline-secondary me-2">
                <i class="bi bi-box-arrow-left me-1"></i> Voltar
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-person-check-fill me-1"></i> Registrar
            </button>
        </div>
    </form>
</div>

@section Scripts {
}
