@model EditarFilmeViewModel

@{
    ViewBag.Title = "Editar Filme";
    Layout = "_Layout";
}

<div class="card bg-dark text-white shadow-sm border-0">
    <form asp-action="Editar" method="post">
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="Nome" class="form-label">Nome</label>
                <input asp-for="Nome" class="form-control bg-dark text-white border-secondary" />
                <span asp-validation-for="Nome" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Duracao" class="form-label">Duração (min)</label>
                <input asp-for="Duracao" type="number" min="1" class="form-control bg-dark text-white border-secondary" />
                <span asp-validation-for="Duracao" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoriaId" class="form-label">Categoria</label>
                <select asp-for="CategoriaId" class="form-select bg-dark text-white border-secondary" asp-items="Model.Categorias">
                    <option value="">Selecione uma categoria</option>
                </select>
                <span asp-validation-for="CategoriaId" class="text-danger small"></span>
            </div>
        </div>

        <div class="card-footer d-flex justify-content-end border-top">
            <a asp-action="Listar" class="btn btn-outline-secondary me-2">
                <i class="bi bi-x-circle me-1"></i> Cancelar
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-save me-1"></i> Salvar
            </button>
        </div>
    </form>
</div>
